<h1>新規商品登録画面</h1>
<%= form_with model:@item, url:admin_items_path, method: :post do |f| %>
<table>
  <tbody>
    <tr>
      <td><%= f.label :"商品画像" %></td>
      <td><%= f.file_field :image, placeholder: "商品画像", accept: "image/*" %></td>
    </tr>
    <tr>
      <td><%= f.label :"商品名" %></td>
      <td><%= f.text_field :item_name %></td>
    </tr>
    <tr>
      <td><%= f.label :"説明" %></td>
      <td><%= f.text_area :item_introduction %></td>
    </tr>
    <tr>
      <td><%= f.label :"価格" %></td>
      <td><%= f.text_field :price %></td>
    </tr>
    <tr>
      <td>
        <%= f.radio_button :sale_status, :true, checked: true %>
        <%= f.label :sale_status, "販売中", value: true %>
      </td>
      <td>
        <%= f.radio_button :sale_status, :false %>
        <%= f.label :sale_status, "販売停止中", value: false %>
      </td>
    </tr>
    <td><%= f.submit "新規登録" %></td>
  </tbody>
</table>
<% end %>