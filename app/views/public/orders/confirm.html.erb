<h3>注文情報確認</h3>

<table>
  <thead>
    <tr>
      <td>商品名</td>
      <td>単価(税込み)</td>
      <td>数量</td>
      <td>小計</td>
    </tr>
  </thead>
  <tbody>
    <% @customer.carts.each do |cart| %>
      <tr>
        <td><%= cart.item.item_name %></td>
        <td><%= cart.tax_price.to_s(:delimited) %></td>
        <td><%= cart.quantity %></td>
        <td><%= cart.subtotal.to_s(:delimited) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
