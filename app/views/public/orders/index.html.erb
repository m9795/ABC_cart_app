<h1>Public::Orders#index</h1>
<p>Find me in app/views/public/orders/index.html.erb</p>
<h3>注文履歴一覧</h3>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <% @orders.each do |order| %>
    <tbody>
      <tr>
        <td><%= order.created_at %></td>
        <td><%#= order.adress %></td>
        <td>
          <% order.ordered_items.each do |ordered_item| %>
            <%= ordered_item.item.item_name %>
          <% end %>
        </td>
        <td></td>
        <td></td>
        <td><%#= link_to "表示する", public_orders_show_path %></td>
      </tr>
    </tbody>
  <% end %>
  <tr></tr>
</table>