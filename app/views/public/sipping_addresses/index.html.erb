<h1>Public::ShippingAddresses#index</h1>
<p>Find me in app/views/public/shipping_addresses/index.html.erb</p>
<h3>配送先登録/一覧</h3>
<%= form_with model: @sipping_address, url: "public/sipping_addresses/index", method: :post do |f| %>
  <table>
    <tbody>
      <tr>
        <td><%= f.label :zip_code, "郵便番号(ハイフンなし)" %></td>
        <td><%= f.text_field :zip_code,  autofocus: true %></td>
      </tr>
      <tr>
        <td><%= f.label :address, "住所" %></td>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <td><%= f.label :name, "宛名" %></td>
        <td><%= f.text_field :name %></td>
      </tr>
      <td><%= f.submit "新規登録" %></td>
    </tbody>
  </table>
<% end %>
  <table>
    <thead>
      <tr>
        <td>郵便番号</td>
        <td>住所</td>
        <td>宛名</td>
      </tr>
    </thead>
    <tbody>
      <%= @sipping_addreses.each do |sipping_address| %>
        <tr>
          <td><%= sipping_address.zip_code %></td>
          <td><%= sipping_address.address %></td>
          <td><%= sipping_name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
